# X-Hunt Production Environment Configuration
# Copy this file to .env.production and fill in real values

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL="postgresql://prod_user:CHANGE_ME_SECURE_PASSWORD@your-db-host:5432/xhunt_prod"

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
NEXTAUTH_URL="https://your-domain.com"
NEXTAUTH_SECRET="CHANGE_ME_32_CHAR_SECRET_KEY_HERE"

# Generate with: openssl rand -base64 32
ENCRYPTION_KEY="CHANGE_ME_32_CHAR_ENCRYPTION_KEY"
JWT_SECRET="CHANGE_ME_JWT_SECRET_KEY_HERE"

# ==============================================
# OAUTH PROVIDERS
# ==============================================
# Google OAuth (https://console.developers.google.com/)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="GOCSPX-your-google-client-secret"

# GitHub OAuth (https://github.com/settings/applications/new)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# ==============================================
# PAYMENT PROCESSING (STRIPE)
# ==============================================
# Stripe Live Keys (https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY="sk_live_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_live_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_endpoint_secret"

# ==============================================
# EMAIL SERVICE
# ==============================================
# SendGrid Configuration
SMTP_HOST="smtp.sendgrid.net"
SMTP_PORT="587"
SMTP_USER="apikey"
SMTP_PASS="SG.your-sendgrid-api-key"
SMTP_FROM="noreply@your-domain.com"

# Alternative: Gmail SMTP
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT="587"
# SMTP_USER="your-email@gmail.com"
# SMTP_PASS="your-app-specific-password"

# ==============================================
# FILE UPLOAD & STORAGE
# ==============================================
# Cloudinary (https://cloudinary.com/console)
CLOUDINARY_CLOUD_NAME="your-cloudinary-cloud-name"
CLOUDINARY_API_KEY="your-cloudinary-api-key"
CLOUDINARY_API_SECRET="your-cloudinary-api-secret"

# ==============================================
# CACHING & SESSIONS
# ==============================================
# Redis Configuration
REDIS_URL="redis://your-redis-host:6379"
# For Redis Cloud: redis://username:password@host:port
# For AWS ElastiCache: redis://your-cluster.cache.amazonaws.com:6379

# ==============================================
# APPLICATION SETTINGS
# ==============================================
APP_URL="https://your-domain.com"
APP_NAME="X-Hunt"
APP_DESCRIPTION="Discover unique local experiences and adventures"
NODE_ENV="production"

# ==============================================
# EXTERNAL APIS
# ==============================================
# Unsplash (https://unsplash.com/developers)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"

# OpenAI (https://platform.openai.com/api-keys)
OPENAI_API_KEY="sk-your-openai-api-key"

# ==============================================
# BLOCKCHAIN (OPTIONAL)
# ==============================================
# Polygon Network
POLYGON_RPC_URL="https://polygon-mainnet.infura.io/v3/your-infura-key"
PRIVATE_KEY="your-wallet-private-key-for-nft-minting"
NFT_CONTRACT_ADDRESS="your-deployed-nft-contract-address"

# ==============================================
# MONITORING & ANALYTICS
# ==============================================
# Google Analytics
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"

# Sentry Error Tracking
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"

# ==============================================
# FEATURE FLAGS
# ==============================================
ENABLE_PAYMENTS="true"
ENABLE_NOTIFICATIONS="true"
ENABLE_BLOCKCHAIN="false"
ENABLE_AI_RECOMMENDATIONS="true"

# ==============================================
# DATABASE BACKUP
# ==============================================
# AWS S3 for backups
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BACKUP_BUCKET="xhunt-prod-backups"

# ==============================================
# SSL & SECURITY
# ==============================================
# SSL Certificate paths (if using custom certs)
SSL_CERT_PATH="/etc/ssl/certs/your-domain.crt"
SSL_KEY_PATH="/etc/ssl/private/your-domain.key"

# Security Headers
CSP_REPORT_URI="https://your-domain.com/api/csp-report"

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS="900000"  # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"   # requests per window

# ==============================================
# LOGGING
# ==============================================
LOG_LEVEL="info"
LOG_FORMAT="json"
LOG_FILE_PATH="/var/log/xhunt/app.log"

# ==============================================
# HEALTH CHECKS
# ==============================================
HEALTH_CHECK_INTERVAL="30000"  # 30 seconds
HEALTH_CHECK_TIMEOUT="5000"    # 5 seconds

# ==============================================
# DEPLOYMENT INFO
# ==============================================
DEPLOYMENT_VERSION="1.0.0"
DEPLOYMENT_DATE="$(date -u +%Y-%m-%dT%H:%M:%SZ)"
GIT_COMMIT_SHA="$(git rev-parse HEAD)"